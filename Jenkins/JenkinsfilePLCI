pipeline {
    agent {
        docker {
            image 'gradle:4.10-alpine'
        }
    }
    environment {
        CI = 'true' 
    }
    stages {
        stage('Build') { 
            steps {
                sh 'gradle build'
            }
        }
        stage('Test') { 
            steps {
            	sh 'chmod +x ./Jenkins/scripts/laundryCItest.sh'
                sh './Jenkins/scripts/laundryCItest.sh'
            }
        }
        stage('SonarQube Analysis') { 
            steps {
                sh 'gradle sonarqube'
            }
        }
    }
}
